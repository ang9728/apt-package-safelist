#!/bin/bash

set -o pipefail
set -o errexit

curl -s 'https://api.github.com/search/issues?q=is:issue+is:open+APT+safelist+repo:travis-ci/travis-ci' | \
  jq '.items |
      .[] |
      {
        packages: .title[26:],
        body: .body,
        number: .number,
        commit_message: ([
          "# (begin generated commit message)",
          (["Add", .title[26:], "to ubuntu-precise"] | join(" ")),
          "",
          (["Closes travis-ci/travis-ci", (.number | tostring)] | join("#")),
          "# (end generated commit message)"
        ] | join("\n"))
      }'
